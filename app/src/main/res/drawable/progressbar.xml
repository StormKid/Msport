<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="0"
                android:centerColor="@color/bg_gray_f0f2f5"
                android:centerY="1"
                android:endColor="@color/bg_gray_f0f2f5"
                android:startColor="@color/bg_gray_f0f2f5" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/bg_orange"
                    android:centerColor="@color/white_high"
                    android:startColor="@color/bg_orange" />
            </shape>
        </clip>
    </item>

</layer-list>