<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_high"
    android:id="@+id/contain_alls"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/bg_orange"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_20">

        <com.msport.clientmaster.view.CircleImageView
            android:id="@+id/my_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/icon_user"
            app:bord_color="@color/white"
            app:bord_width="@dimen/size_0.5" />

        <LinearLayout
            android:id="@+id/my_login_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="请登录"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18" />

            <TextView
                android:id="@+id/my_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:text="手机:186＊＊＊＊5216"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_12" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/my_message"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/my_massage" />


            <ImageView
                android:id="@+id/my_properties"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_28"
                android:layout_centerInParent="true"
                android:src="@mipmap/gerenziliao" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/dp_18">

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/my_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/dingdan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:background="@color/line_bg_d9" />

        <LinearLayout
            android:id="@+id/my_bag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/qianbao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钱包" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:background="@color/line_bg_d9" />

        <LinearLayout
            android:id="@+id/my_crips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/youhuijuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券" />


        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_13" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/kecheng" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_10"
                android:text="我的课程"
                android:textColor="@color/text_black_5c"
                android:textSize="@dimen/size_16" />

            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/jinru" />
        </LinearLayout>

        <View style="@style/myLine" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_activity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/selector_normal"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/huodong" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="我的活动"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru" />
            </LinearLayout>

            <View style="@style/myLine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/selector_normal"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/dianping" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="我的点评"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru" />
            </LinearLayout>


        </LinearLayout>

        <View style="@style/myLine" />
    </LinearLayout>

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/my_fankui"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/selector_normal"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/fankuiyijian" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="意见反馈"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru" />
            </LinearLayout>

            <View style="@style/myLine" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="@drawable/selector_normal"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/shezhi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="设置"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_16" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/myLine" />
    </LinearLayout>

    <View
        style="@style/devider"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

</LinearLayout>