<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain_alls"
    android:background="@color/white_high"
    android:orientation="vertical">

    <include layout="@layout/include_title" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue_3EA1FD"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您预定的活动，请在60分钟内完成制，否则订单将会被取消。"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            style="@style/devider"
            android:layout_height="@dimen/dp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单号:"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_weight="3"
                    android:text="15464646464464"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="活动名称:"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/order_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_weight="3"
                    android:text="不要走决定到天亮"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报名人数:"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/order_member"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_weight="3"
                    android:text="3人"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付金额："
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_weight="3"
                    android:text="¥40"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/size_16" />

            </LinearLayout>



            <View style="@style/myLine" />

            <View
                style="@style/devider"
                android:layout_height="@dimen/dp_12" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_15">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />


            </LinearLayout>

            <View style="@style/myLine" />
            <LinearLayout
                android:id="@+id/order_qianbao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_normal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">
                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/qianbaotoubiao"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/tuijianzhifu"
                    />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="钱包"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请支付"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View
                style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12" />
            <LinearLayout
                android:id="@+id/order_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/selector_normal"
                android:padding="@dimen/dp_12">
                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/weixin"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View
                style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout
                android:id="@+id/order_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/selector_normal"
                android:padding="@dimen/dp_12">
                <RelativeLayout
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/zhifubao"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />


                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View style="@style/myLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_15">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付有问题请拨打"
                    android:textColor="@color/text_gray_89"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400-611-3631"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/size_14" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>