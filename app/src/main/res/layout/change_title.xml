<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dp_12"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/left_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/return_orange" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/choice_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_choice_selector_left"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_8"
                android:text="课程"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/choice_coach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_choice_unselector_right"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_8"
                android:text="私教"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/size_16" />


        </LinearLayout>
        <TextView
            android:id="@+id/right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/size_14"
            android:visibility="gone"
            />
    </RelativeLayout>



</LinearLayout>