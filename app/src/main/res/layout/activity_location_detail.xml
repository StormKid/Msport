<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_f0f2f5"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.msport.clientmaster.view.HomeScrollView
            android:id="@+id/changguan_detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/changguan_detail_title_no_scr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_185">

                    <ImageView
                        android:id="@+id/bisai_changguan_detail_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/menpiao_detail" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_black_trans" />

                    <RelativeLayout
                        android:id="@+id/changguan_detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/back_white"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_12"
                            android:src="@mipmap/back_white" />

                        <ImageView
                            android:id="@+id/share_white"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp_12"
                            android:visibility="gone"
                            android:src="@mipmap/share_wihte" />


                    </RelativeLayout>

                </RelativeLayout>

                <View style="@style/myLine" />


                <TextView
                    android:id="@+id/changguan_detail_name"
                    android:background="@color/white_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:text="千江月恒温游泳馆"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <View style="@style/myLine" />

                <LinearLayout
                    android:id="@+id/changguan_detail_adress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_normal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_18"
                        android:text="地点："
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/dp_15" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_8">

                            <TextView
                                android:id="@+id/bisai_changguan_detail_locaition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="武昌中南体育馆"
                                android:textColor="@color/text_black_2f"
                                android:textSize="@dimen/dp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="2.3km"
                                android:textColor="@color/text_black_333"
                                android:textSize="@dimen/size_14"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/bisai_changguan_detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="武昌区中南路终南街道口100号"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/dp_15" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dp_5"
                        android:src="@mipmap/jinru_back" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bisai_changguan_detail_cellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_high"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_high"
                        android:text="联系方式："
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/bisai_changguan_detail_phonenum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13125124389"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_15" />
                </LinearLayout>

                <View
                    style="@style/myLine"
                    android:layout_marginLeft="@dimen/dp_12" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_high"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_high"
                        android:text="营业时间："
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_15" />

                    <TextView
                        android:id="@+id/bisai_changguan_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016.08.08-2016.08.08"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_15" />
                </LinearLayout>


                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_high"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:id="@+id/location_menpiao_contain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="门票"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                </LinearLayout>

                <View style="@style/myLine"/>
                <com.msport.clientmaster.view.InnerListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:listSelector="@color/transparent"
                    android:id="@+id/bisai_changguan_detail_innermenpiao"
                    />


                <View style="@style/devider"
                    android:layout_height="@dimen/dp_12"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_high"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="场馆图片"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                </LinearLayout>

                <View style="@style/myLine" />

                <LinearLayout
                    android:id="@+id/changguan_detail_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_high"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">


                </LinearLayout>



            </LinearLayout>


        </com.msport.clientmaster.view.HomeScrollView>

        <include layout="@layout/include_title" />

    </RelativeLayout>
</LinearLayout>


