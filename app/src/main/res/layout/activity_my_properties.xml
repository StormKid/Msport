<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/loginbg"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20">

        <com.msport.clientmaster.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            app:bord_color="@color/white"
            app:bord_width="@dimen/size_0.5"
            android:src="@mipmap/icon_user"
            android:layout_centerInParent="true" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35"
        android:paddingTop="@dimen/dp_15"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="@color/text_black_5c"
                android:textSize="@dimen/size_15" />

            <EditText
                android:id="@+id/nick_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                style="@style/user_set_right"
                android:hint="请输入昵称"
                android:maxLength="16" />

        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/propertie_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/text_black_5c"
                android:textSize="@dimen/size_15" />

            <TextView
                android:gravity="right"
                android:id="@+id/user_gender"
                style="@style/user_set_right"
                android:hint="选择性别"
                android:maxLength="16" />

        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/propertie_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textColor="@color/text_black_5c"
                android:textSize="@dimen/size_15" />

            <TextView
                android:gravity="right"
                android:id="@+id/user_birth"
                style="@style/user_set_right"
                android:hint="选择日期"
                android:maxLength="16" />

        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/prepay_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textColor="@color/text_black_5c"
                android:textSize="@dimen/size_15" />

            <TextView
                android:gravity="right"
                android:id="@+id/user_address"
                style="@style/user_set_right"
                android:hint="选择地区"
                android:maxLength="16" />

        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginBottom="@dimen/dp_15" />


        <Button
            android:id="@+id/property_start"
            style="@style/buttom_button"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_categroy_tagdo"
            android:textColor="@color/text_orange"
            android:text="完成" />


    </LinearLayout>


</LinearLayout>