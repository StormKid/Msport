<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain_alls"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <View style="@style/devider"
        android:layout_height="@dimen/dp_12"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接受推送"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_15" />

            <ImageView
                android:id="@+id/push_open"
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_35"
                android:src="@mipmap/off" />
        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/my_safety"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户安全"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/jinru" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_12"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_decache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清理缓存"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:id="@+id/setting_cache"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="186M"
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_14" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/jinru" />
        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/setting_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/jinru" />
        </LinearLayout>

        <View
            style="@style/devider"
           android:layout_height="@dimen/dp_12"
            />

        <LinearLayout
            android:id="@+id/setting_xieyi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_normal"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于微动体育"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/jinru" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginBottom="@dimen/dp_8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本信息"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textColor="@color/text_gray_B0"
                android:textSize="@dimen/size_15" />

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/jinru" />
        </LinearLayout>

        <View
            android:visibility="gone"
            style="@style/myLine"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/setting_pingfen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_high"
            android:padding="@dimen/dp_15" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服电话"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_15" />

            <TextView
                android:id="@+id/setting_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="400-611-3631"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/size_15" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_12"
         />

    <TextView
        android:id="@+id/exit_member"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/selector_normal"
        android:gravity="center"
        android:text="退出登陆"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/size_18" />

    <View style="@style/devider"
        android:layout_height="match_parent"
        />

</LinearLayout>