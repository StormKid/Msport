<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_high"
    android:orientation="vertical">

    <TextView
        android:id="@+id/zhineng_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:text="智能排序"
        android:textColor="@color/text_black_333"
        android:textSize="@dimen/size_13" />

    <View style="@style/myLine" />

    <TextView
        android:id="@+id/renqi_categroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:text="人气最高"
        android:textColor="@color/text_black_333"
        android:textSize="@dimen/size_13" />

    <View style="@style/myLine" />

    <TextView
        android:id="@+id/pingjia_categroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:text="评价最高"
        android:textColor="@color/text_black_333"
        android:textSize="@dimen/size_13" />

    <View style="@style/myLine" />

    <TextView
        android:id="@+id/price_max_categroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:text="价格最高"
        android:textColor="@color/text_black_333"
        android:textSize="@dimen/size_13" />

    <View style="@style/myLine" />

    <TextView
        android:id="@+id/price_min_categroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_13"
        android:text="价格最底"
        android:textColor="@color/text_black_333"
        android:textSize="@dimen/size_13" />

    <View style="@style/myLine" />

</LinearLayout>