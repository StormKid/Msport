<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_f0f2f5"
    android:id="@+id/contain_alls"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/include_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.08"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_list_join"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_black_5c"
            android:text="我参与的" />

        <TextView
            android:id="@+id/activity_list_provide"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_14"
            android:text="我发起的" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_fragment_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92"
        />

</LinearLayout>

