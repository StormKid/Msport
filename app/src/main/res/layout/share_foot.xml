<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/buttom_popcontain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_black_E54"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/xiangmu_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@mipmap/xuanxiang_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/didian_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@mipmap/didian_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/paixu_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@mipmap/paixu_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shaixuan_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@mipmap/shaixuan_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/text_white"
                android:textSize="@dimen/size_10" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>