<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/course_vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12">

        <ImageView
            android:id="@+id/order_finish_course_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_65"
            android:layout_marginRight="@dimen/size_10"
            android:scaleType="fitXY"
            android:src="@mipmap/show_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_finish_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最炫民族风课程"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/order_finish_course_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:text="嘿嘿嘿舞蹈工作室"
                android:textColor="@color/text_gray_97"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/order_finish_course_keshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="＃3课时"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/size_12" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/yuqiu_vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <ImageView
            android:id="@+id/order_finish_yueqiu_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/show_img" />

        <LinearLayout
            android:id="@+id/yuewqiu_vg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_finish_yueqiu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文海"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_16" />

            <TextView
                android:id="@+id/order_finish_yueqiu_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_2"
                android:text="决战到天亮"
                android:textColor="@color/text_gray_97"
                android:textSize="@dimen/size_14" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/coach_vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <ImageView
            android:id="@+id/order_finish_coach_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:scaleType="fitXY"
            android:src="@mipmap/show_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_13">

            <TextView
                android:id="@+id/order_finish_coach_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文海"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/shape_coach_listtag"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:text="帅气"
                    android:textColor="@color/text_gray_97"
                    android:textSize="@dimen/size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/shape_coach_listtag"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:text="阳光"
                    android:textColor="@color/text_gray_97"
                    android:textSize="@dimen/size_11" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@drawable/shape_coach_listtag"
                    android:paddingBottom="@dimen/dp_1"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_1"
                    android:text="教学严谨"
                    android:textColor="@color/text_gray_97"
                    android:textSize="@dimen/size_11" />


            </LinearLayout>


            <TextView
                android:id="@+id/order_finish_coach_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="对学生有耐心，经历丰富课堂气氛活跃"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/size_13" />


        </LinearLayout>

        <TextView
            android:id="@+id/order_finish_coach_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¥400/课时"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_14" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menpiao_vg"
        android:visibility="gone"
        android:background="@drawable/selector_normal"
        android:padding="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_menpiao_image"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@mipmap/show_img"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_marginLeft="@dimen/size_10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/order_menpiao_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最炫民族风课程"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_16"
                />
            <TextView
                android:id="@+id/order_menpiao_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场馆：千江月恒温游泳馆"
                android:textSize="@dimen/size_14"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/text_black_5c"
                />
            <TextView
                android:id="@+id/order_menpiao_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_blue"
                android:textSize="@dimen/size_12"
                android:visibility="invisible"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/order_menpiao_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="¥4000"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_14"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>