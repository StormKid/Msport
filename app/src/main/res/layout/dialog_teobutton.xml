<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/dialog_all"
    android:weightSum="1">

    <LinearLayout
        android:layout_margin="@dimen/dp_60"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_twobutton_dialog"
        android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:padding="@dimen/dp_12"
                android:text=""
                android:gravity="center"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_16"
                android:id="@+id/dialog_title" />

            <View style="@style/myLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/dialog_yes"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/text_blue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_normal"
                    android:layout_margin="@dimen/dp_5"
                    android:text="确定" />

                |

                <View
                    android:layout_width="@dimen/size_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/line_bg_d9" />

                <Button
                    android:layout_margin="@dimen/dp_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_14"
                    android:background="@drawable/selector_normal"
                    android:id="@+id/dialog_no" />


            </LinearLayout>

    </LinearLayout>


</LinearLayout>