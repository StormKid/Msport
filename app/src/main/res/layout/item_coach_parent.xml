<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">

    <View style="@style/myLine"
        android:layout_alignParentTop="true"
        android:id="@+id/coach_base_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_13"
        android:paddingLeft="@dimen/dp_13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/jingxuan_course" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:id="@+id/item_coach_img"
                android:layout_width="@dimen/dp_95"
                android:layout_height="@dimen/dp_95"
                android:scaleType="fitXY"
                android:src="@mipmap/show_img" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_13">

                <TextView
                    android:id="@+id/item_coach_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文海"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_17" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="帅气"
                        android:layout_marginRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1"
                        android:background="@drawable/shape_coach_listtag"
                        android:textColor="@color/text_gray_97"
                        android:textSize="@dimen/size_11" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="教学严谨"
                        android:layout_marginRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingBottom="@dimen/dp_1"
                        android:background="@drawable/shape_coach_listtag"
                        android:textColor="@color/text_gray_97"
                        android:textSize="@dimen/size_11" />


                </LinearLayout>


                <TextView
                    android:id="@+id/item_coach_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="对学生有耐心，经历丰富课堂气氛活跃"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/size_13" />




            </LinearLayout>

            <TextView
                android:id="@+id/item_coach_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="¥400/课时"
                android:textColor="@color/text_red"
                android:textSize="@dimen/size_16" />




        </LinearLayout>

        <View
            style="@style/myLine"
            android:layout_marginLeft="@dimen/dp_105"
            android:layout_marginTop="@dimen/dp_8" />

        <LinearLayout
            android:id="@+id/show_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_95"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13"
                android:text="场馆"
                android:textColor="@color/text_yellow"
                android:textSize="@dimen/size_13" />

            <View
                android:layout_width="@dimen/size_0.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_12"
                android:background="@color/line_bg_d9" />

            <TextView
                android:id="@+id/item_coach_location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="中南体育馆"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/size_13" />
            <ImageView
                android:id="@+id/item_coach_right_iv"
                android:layout_width="wrap_content"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/jinru_back"
                android:layout_gravity="bottom"
                />
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>