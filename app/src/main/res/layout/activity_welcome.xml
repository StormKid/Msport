<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/wel_other_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/out_view" />

        <RelativeLayout
            android:id="@+id/wel_first_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/zhuce" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_black_trans"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/wel_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="登陆"
                    android:textColor="@color/white_high"
                    android:textSize="@dimen/size_18" />

                <View
                    android:layout_width="@dimen/size_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/white_high" />

                <TextView
                    android:id="@+id/wel_registe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="注册"
                    android:textColor="@color/white_high"
                    android:textSize="@dimen/size_18" />


            </LinearLayout>

            <TextView
                android:id="@+id/wel_tomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_20"
                android:background="@drawable/shape_inner"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3"
                android:text="直接进入"
                android:textColor="@color/white_high"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>