<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain_alls"
    android:orientation="vertical">


    <include layout="@layout/include_title" />

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_12" />

    <LinearLayout
        android:id="@+id/qianbao_choose_paytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:text="选择方式"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_16" />

        <TextView
            android:id="@+id/qianbao_paytype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="支付宝"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:src="@mipmap/jinru_back" />

    </LinearLayout>

    <View style="@style/myLine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_12"
        android:text="充值金额"
        android:textColor="@color/text_black_2f"
        android:textSize="@dimen/size_16" />

    <EditText
        android:inputType="phone"
        android:id="@+id/qianbao_done_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="0.00"
        android:maxLength="8"
        android:padding="@dimen/dp_12"
        android:text=""
        android:textColor="@color/text_black_2f"
        android:textSize="@dimen/size_40" />

    <View style="@style/myLine" />

    <TextView
        android:id="@+id/qianbao_request_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_15"
        android:text="零钱余额¥100"
        android:textColor="@color/text_gray_97" />


    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_15" />

    <TextView
        android:id="@+id/qianbao_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:gravity="center"
        android:padding="@dimen/dp_12"
        android:text="确定"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/size_16"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/bg_gray_f0f2f5"
        />

</LinearLayout>