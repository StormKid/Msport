<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/contain_alls"
    >

    <include layout="@layout/include_title"/>

    <View style="@style/devider"
        android:layout_height="@dimen/dp_15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/bind_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的平台号码"
            android:background="@color/white"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_15" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/bind_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的手机号码"
            android:background="@color/white"
            android:maxLength="11"
            android:inputType="number"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/bind_name"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入您的姓名"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15"
            />

    </LinearLayout>

    <View style="@style/devider"
        android:layout_height="@dimen/dp_15"
        />



        <TextView
            android:padding="@dimen/dp_12"
            android:id="@+id/bind_commit"
            android:background="@drawable/selector_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:text="提交"
            android:textSize="@dimen/size_16"
            android:gravity="center"
            />


    <View style="@style/devider"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>