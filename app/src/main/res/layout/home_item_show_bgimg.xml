<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/img_title"
        android:gravity="center"
        android:id="@+id/title_tag_contain"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优选，你需要的一切"
            android:textColor="@color/text_white"
            android:textSize="@dimen/size_20"
            android:layout_marginBottom="@dimen/dp_13"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/no_scroll_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:background="@color/bg_white_trans"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12">
                
                <ImageView
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13"
                    android:src="@mipmap/search_icon"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程、老师、机构、俱乐部"
                    android:textSize="@dimen/size_13"
                    android:textColor="@color/text_gray_7c"
                    />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>