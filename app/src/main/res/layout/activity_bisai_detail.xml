<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_high"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.msport.clientmaster.view.HomeScrollView
            android:id="@+id/detail_scroll_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/detail_title_no_scr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_185">

                    <ImageView
                        android:id="@+id/bisai_detail_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/see" />

                    <RelativeLayout
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/back_white"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_12"
                            android:src="@mipmap/back_white" />

                        <ImageView
                            android:id="@+id/share_white"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp_12"
                            android:src="@mipmap/share_wihte" />


                    </RelativeLayout>

                </RelativeLayout>

                <View style="@style/myLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:id="@+id/bisai_detail_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="微动体育第一届羽毛球比赛"
                        android:textColor="@color/text_black_37"
                        android:textSize="@dimen/size_16" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#个人赛"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:id="@+id/bisai_detail_member"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="比赛人数20人"
                        android:textColor="@color/text_black_5c"
                        android:textSize="@dimen/size_14" />


                    <TextView
                        android:id="@+id/bisai_detial_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥40"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:text="赛事安排"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <View style="@style/myLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_18"
                        android:text="赛事地址："
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/dp_15" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_8">

                            <TextView
                                android:id="@+id/bisai_detail_locaition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="武昌中南体育馆"
                                android:textColor="@color/text_black_2f"
                                android:textSize="@dimen/dp_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="2.3km"
                                android:textColor="@color/text_black_333"
                                android:textSize="@dimen/size_14"
                                android:visibility="gone" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/bisai_detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="武昌区中南路终南街道口100号"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/dp_15" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:background="@color/white"
                    android:id="@+id/bisai_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:text="时间：2016.08.03  11:10－2016.08.20  12:12"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_15" />

                <View
                    style="@style/myLine"
                    android:layout_marginTop="@dimen/dp_13" />


                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="赛事"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                </LinearLayout>

                <View style="@style/myLine" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                    <com.msport.clientmaster.view.JustifyTextView
                        android:id="@+id/bisai_detail_notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="@string/bisai_show"
                        android:textColor="@color/text_black_5c"
                        android:textSize="@dimen/size_15" />
                </FrameLayout>

            </LinearLayout>


        </com.msport.clientmaster.view.HomeScrollView>

        <include layout="@layout/include_title" />


    </RelativeLayout>

    <Button
        android:id="@+id/go_to_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/bg_orange"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />
</LinearLayout>


