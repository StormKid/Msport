<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_f0f2f5"
    >

    <include layout="@layout/include_title"/>

    <View style="@style/devider"
        android:layout_height="@dimen/dp_30"
        android:background="@color/transparent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/pwd_change_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入密码"
            android:background="@color/white"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_15" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/pwd_change_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入新密码"
            android:background="@color/white"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/pwd_change_after_check"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:textColorHint="@color/text_gray_B0"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15"
            />

    </LinearLayout>

    <View style="@style/myLine" />




</LinearLayout>