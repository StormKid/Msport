<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain_alls"
    android:orientation="vertical"
    android:background="@color/white_high"
    >

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_8">

                <ImageView
                    android:id="@+id/prepay_img"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:src="@mipmap/touxiang" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_13">

                    <TextView
                        android:id="@+id/prepay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刘德华"
                        android:textColor="@color/text_black_333"
                        android:textSize="@dimen/size_17" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/prepay_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="决战到天亮"
                        android:textColor="@color/text_black_333"
                        android:textSize="@dimen/size_14" />
                    <com.msport.clientmaster.view.MyTagViewGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/prepay_tag"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/prepay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥40"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/size_20" />

            </LinearLayout>


            <View
                style="@style/devider"
                android:layout_height="@dimen/dp_12" />

            <LinearLayout
                android:id="@+id/propay_first_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/propay_first_choose_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的课程"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/propay_first_choose_tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择人数"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View
                style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12" />
            <LinearLayout
                android:id="@+id/propay_second_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/propay_second_choose_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的课程"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/propay_second_choose_tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择人数"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prepay_choose_youhui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="点击查看可使用优惠券"
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/size_12" />

                <TextView
                    android:id="@+id/prepay_choose_youhui_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未使用优惠券"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12"
                />
            <LinearLayout
                android:id="@+id/propay_four_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/propay_four_choose_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的课程"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/propay_four_choose_tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择人数"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>
            <View style="@style/myLine"/>

            <View
                style="@style/devider"
                android:layout_height="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/order_finish_type_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="活动价格"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/prepay_activity_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text="¥40"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_14" />

            </LinearLayout>

            <View
                style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已优惠"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/prepay_need_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text="¥0"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/size_14" />

            </LinearLayout>

            <View
                style="@style/myLine"
                android:layout_marginLeft="@dimen/dp_12" />

            <LinearLayout
                android:id="@+id/prepay_should_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_high"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="报名须知"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名即表示同意"
                    android:textColor="@color/text_orange"
                    android:textSize="@dimen/size_14" />

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@mipmap/jinru_back" />
            </LinearLayout>

            <View style="@style/myLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:paddingTop="@dimen/dp_15">


                <TextView
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="距离活动截止报名还有2小时20分钟"
                    android:textColor="@color/text_gray_89"
                    android:textSize="@dimen/size_14" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_black_383d42"
            android:gravity="center"
            android:textSize="@dimen/size_16" >

            <TextView
                android:id="@+id/order_finish_total_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计¥40"
                android:textColor="@color/white_high"
                android:textSize="@dimen/size_18"
                />

        </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        >
        <Button
            android:id="@+id/go_to_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_blue_3EA1FD"
            android:gravity="center"
            android:text="前往支付"
            android:textColor="@color/white_high"
            android:textSize="@dimen/size_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hint_view"
            android:background="@color/transparent"
            android:visibility="gone"
            />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>