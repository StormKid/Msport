<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/bg_whtie_fc"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_button_iv"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5"
            android:focusable="true" />

        <TextView
            android:id="@+id/home_button_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/zhongjiantanchu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/my_button_iv"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_5" />

        <TextView
            android:id="@+id/my_button_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_10" />
    </LinearLayout>

</LinearLayout>