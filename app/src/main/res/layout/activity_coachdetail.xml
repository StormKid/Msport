<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_high"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.msport.clientmaster.view.HomeScrollView
            android:id="@+id/detail_scroll_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <RelativeLayout
                    android:id="@+id/detail_title_no_scr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_185">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/bg_black_trans" />

                    <RelativeLayout
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_12"
                            android:id="@+id/back_white"
                            android:src="@mipmap/back_white" />

                        <ImageView
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="@dimen/dp_12"
                            android:id="@+id/share_white"
                            android:src="@mipmap/share_wihte" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_title"
                        android:padding="@dimen/dp_12">
                        <ImageView
                            android:id="@+id/yueqiu_detail_img"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_100"
                            android:src="@mipmap/zhanshitu"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/yueqiu_detail_img"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/coach_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="文海"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_18" />

                            <com.msport.clientmaster.view.MyTagViewGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                 >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/shape_categroy_tagnone"
                                    android:text="好人"
                                    android:paddingLeft="@dimen/dp_8"
                                    android:paddingRight="@dimen/dp_8"
                                    android:paddingTop="@dimen/dp_3"
                                    android:paddingBottom="@dimen/dp_3"
                                    android:textColor="@color/line_bg_d9"
                                    />



                            </com.msport.clientmaster.view.MyTagViewGroup>

                            <TextView
                                android:id="@+id/coach_introduce"
                                android:layout_marginTop="@dimen/dp_18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_13"
                                android:text="随心所欲跳出你的精彩狂炫你的舞蹈风采我们在等你"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>




                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp_15"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/coach_gender"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:text="性别男"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/text_black_5c"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="@dimen/size_0.5"
                        android:layout_height="match_parent"
                        android:background="@color/line_bg_d9"
                        />
                    <TextView
                        android:id="@+id/coach_year"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="执教八年"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/text_black_5c"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="@dimen/size_0.5"
                        android:layout_height="match_parent"
                        android:background="@color/line_bg_d9"

                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:text="官方认证"
                        android:textSize="@dimen/size_14"
                        android:textColor="@color/text_black_5c"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="课程安排"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                </LinearLayout>

                <View style="@style/myLine" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >

                    <TextView
                        android:paddingTop="@dimen/dp_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课程地点："
                        android:paddingLeft="@dimen/dp_12"
                        android:textSize="@dimen/dp_15"
                        android:textColor="@color/text_black_2f"
                        android:id="@+id/textView4" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:paddingRight="@dimen/dp_12"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_8">

                            <TextView
                                android:id="@+id/coach_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:text="武昌中南体育馆"
                                android:textColor="@color/text_black_2f"
                                android:textSize="@dimen/dp_15" />

                            <TextView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="2.3km"
                                android:textColor="@color/text_black_333"
                                android:textSize="@dimen/size_14" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/coach_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="武昌区中南路终南街道口100号"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/dp_15" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:background="@color/white_high"
                    android:id="@+id/coach_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:text="教练电话：报名后查看"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_15"
                    />

                <View
                    style="@style/myLine"
                    android:layout_marginTop="@dimen/dp_13" />

                <TextView
                    android:background="@color/white_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:text="个人图片"
                    android:textColor="@color/text_black_2f"
                    android:textSize="@dimen/size_16" />

                <View style="@style/myLine" />

                <LinearLayout
                    android:background="@color/white_high"
                    android:id="@+id/resource_images"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_20">

                </LinearLayout>
                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="资质说明"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16"
                        android:id="@+id/textView" />


                </LinearLayout>

                <View style="@style/myLine" />


                <com.msport.clientmaster.view.InnerListView
                    android:id="@+id/zizhi_show_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none" />

                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />
                <LinearLayout
                    android:id="@+id/detail_review_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="学生评价"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                    <TextView
                        android:id="@+id/detail_all_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#共23评论"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <View style="@style/myLine" />

                <com.msport.clientmaster.view.InnerListView
                    android:id="@+id/review_show_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none" />


                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="课程标签"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#共9标签"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <View style="@style/myLine" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <com.msport.clientmaster.view.MyTagViewGroup
                        android:id="@+id/detail_tag_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_12"

                        />
                </FrameLayout>

                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="平台保证"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#优质课程"
                        android:textColor="@color/text_blue"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <View style="@style/myLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/baozhang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="资金安全"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/baozhang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="真实评价"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_35"
                            android:src="@mipmap/baozhang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实名认证"
                            android:textColor="@color/text_black_5c"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/devider"
                    android:layout_height="@dimen/dp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp_15"
                    android:visibility="gone"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_15">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="相关课程"
                        android:textColor="@color/text_black_2f"
                        android:textSize="@dimen/size_16" />


                </LinearLayout>

                <View style="@style/myLine" />

                <com.msport.clientmaster.view.InnerListView
                    android:id="@+id/detail_about_listcourse"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />

            </LinearLayout>


        </com.msport.clientmaster.view.HomeScrollView>

       <include layout="@layout/include_title" />


    </RelativeLayout>

    <Button
        android:id="@+id/go_to_pay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/bg_orange"
        android:text="立即购买"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />
</LinearLayout>