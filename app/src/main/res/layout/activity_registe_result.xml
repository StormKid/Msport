<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35"
        android:paddingTop="@dimen/dp_15"
        android:weightSum="1">

        <LinearLayout
            style="@style/put_item"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pwd_do"
                style="@style/user_set_in"
                android:hint="6-16位数字、英文"
                android:inputType="textPassword"
                android:maxLength="16" />

            <View style="@style/myLine" />
        </LinearLayout>

        <LinearLayout
            style="@style/put_item"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="vertical">

            <EditText
                android:id="@+id/pwd_pwd"
                style="@style/user_set_in"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="16" />

            <View style="@style/myLine" />
        </LinearLayout>

        <Button
            android:id="@+id/pwd_start"
            style="@style/buttom_button"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_categroy_tagdo"
            android:text="完成"
            android:textColor="@color/text_orange" />


    </LinearLayout>


</LinearLayout>

