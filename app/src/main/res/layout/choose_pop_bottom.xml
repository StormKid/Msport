<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/contain_alls"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pop_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:text="取消"
                android:textColor="@color/text_black_5c" />

            <TextView
                android:id="@+id/pop_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_12"
                android:text="确定"
                android:textColor="@color/text_black_5c" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请现在要使用的优惠卷"
                    android:textColor="@color/text_black_333"
                    android:textSize="@dimen/size_16" />

                <TextView
                    android:id="@+id/pop_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每笔订单只能使用一张优惠卷"
                    android:textColor="@color/text_gray_97"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>


        </RelativeLayout>

        <View style="@style/myLine" />

        <RelativeLayout
            android:background="@color/white_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:scrollbars="none"
                android:id="@+id/pop_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/transparent" />

            <TextView
                android:id="@+id/pop_none_contain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_gray_f0f2f5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_black_5c"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>