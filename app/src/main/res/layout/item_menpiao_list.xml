<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:padding="@dimen/dp_12">

        <ImageView
            android:id="@+id/menpiao_list_img"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_95"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@mipmap/show_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/menpiao_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大量月羽毛球场馆"
                android:textColor="@color/text_black_2f"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/menpiao_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="仅售39.9元价值98元单人单次室内羽毛球票，男女通用"
                android:textColor="@color/text_gray_97"
                android:textSize="@dimen/size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/size_12" />

                <TextView
                    android:id="@+id/menpiao_list_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:text="39.9"
                    android:textColor="@color/text_red"
                    android:textSize="@dimen/size_18"

                    />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>