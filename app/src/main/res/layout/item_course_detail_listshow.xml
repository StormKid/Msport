<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/dp_12"
    android:gravity="center"
    android:background="@color/white_high"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time_list_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="课程时间：1"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_14"
            />

        <TextView
            android:id="@+id/time_list_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2016.07.07"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_14"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/time_list_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="11:00-12:00"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_14"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>
</LinearLayout>