<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_f0f2f5"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <View style="@style/myLine" />

    <EditText
        android:id="@+id/fankui_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/white_high"
        android:gravity="top"
        android:hint="@string/fankui"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLength="255"
        android:maxLines="10"
        android:padding="@dimen/dp_15"
        android:scrollHorizontally="false"
        android:textColor="@color/text_black_5c"
        android:textColorHint="@color/text_gray_97"
        android:textSize="@dimen/size_15" />

    <View style="@style/myLine" />

</LinearLayout>