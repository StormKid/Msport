<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contain_alls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/titile_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/bg_gray_f0f2f5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/one_no"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_15" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/one_yes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_15" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_contain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/white_high"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <com.msport.clientmaster.view.wheelview.views.WheelView
            android:id="@+id/wv_birth_year"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.msport.clientmaster.view.wheelview.views.WheelView
            android:id="@+id/wv_birth_month"
            android:layout_width="0dip"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.msport.clientmaster.view.wheelview.views.WheelView
            android:id="@+id/wv_birth_day"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.msport.clientmaster.view.wheelview.views.WheelView
            android:id="@+id/wv_birth_hour"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.msport.clientmaster.view.wheelview.views.WheelView
            android:id="@+id/wv_birth_min"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>