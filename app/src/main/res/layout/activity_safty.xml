<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contain_alls"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <View
        style="@style/devider"
        android:layout_height="@dimen/dp_12" />

    <LinearLayout
        android:id="@+id/user_safty_phone_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/user_safty_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="18674075216"
            android:textColor="@color/text_gray_B0"
            android:textSize="@dimen/size_15" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_3"
            android:src="@mipmap/jinru" />
    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_15" />

    <LinearLayout
        android:id="@+id/user_safty_password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_normal"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/text_black_2f"
            android:textSize="@dimen/size_15" />

        <TextView
            android:id="@+id/user_safty_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:inputType="textPassword"
            android:text="123456"
            android:textColor="@color/text_gray_B0"
            android:textSize="@dimen/size_15" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_3"
            android:src="@mipmap/jinru" />
    </LinearLayout>

    <View style="@style/myLine" />

</LinearLayout>