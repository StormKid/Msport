<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg"
    android:orientation="vertical" >

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_35"
        android:paddingRight="@dimen/dp_35"
        android:paddingTop="@dimen/dp_15"
        android:weightSum="1" >

        <LinearLayout
            style="@style/put_item"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/dp_10" >

            <EditText
                android:id="@+id/login_phone"
                style="@style/user_set_in"
                android:hint="输入手机号"
                android:inputType="number"
                android:maxLength="11" />

            <View style="@style/myLine"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            style="@style/put_item"
            android:layout_marginBottom="@dimen/dp_10" >

            <EditText
                android:id="@+id/login_pwd"
                style="@style/user_set_in"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:maxLength="16" />

            <View style="@style/myLine"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_start"
            style="@style/buttom_button"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_categroy_tagdo"
            android:textColor="@color/text_orange"
            android:text="登陆" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            >

        <TextView
            android:id="@+id/login_lose_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="忘记密码"
            android:textColor="@color/text_black_5c"
            android:textSize="@dimen/size_14" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/login_to_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="免费注册"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="bottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/size_0.5"
                    android:background="@color/line_bg_6"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="第三方登陆"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/size_0.5"
                    android:background="@color/line_bg_6"
                    />

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="bottom"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/weixin_on"
                    android:id="@+id/login_weixin"
                    />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/view2">

            </View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <ImageView
                    android:src="@mipmap/qq_on"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/login_qq" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>