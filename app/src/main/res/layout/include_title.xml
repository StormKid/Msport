<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_title_change"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_high"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_high"
        >

        <ImageView
            android:id="@+id/back_black"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/fanhui_black" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/size_18"
            android:maxLength="12"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_black_333"
            android:text="微动体育课程" />
        <ImageView
            android:id="@+id/title_up_down"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_toRightOf="@id/main_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@mipmap/up_domw"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/share_black"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/share_black" />

        <TextView
            android:id="@+id/title_right_tv"
            android:layout_width="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black_333"
            android:textSize="@dimen/size_16"
            android:visibility="gone"
            android:text="完成" />

    </RelativeLayout>

    <View style="@style/myLine" />
</LinearLayout>