<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_context"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rectangle"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center|bottom" >

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_55"
            android:layout_marginBottom="@dimen/dp_20"
            android:src="@mipmap/content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/height_contain"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal"

            >
            <View
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/home_yumaoqiu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                >

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:src="@mipmap/yumaoqiu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="羽毛球"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_youyong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible"
                >

                <ImageView
                    android:id="@+id/pop_img"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:src="@mipmap/wangqiu" />

                <TextView
                    android:id="@+id/pop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网球"
                    android:textColor="@color/text_black_5c"
                    android:textSize="@dimen/size_14" />
            </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/home_buttom_changed"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/dilan" />

        <View style="@style/myLine"
            android:layout_above="@id/home_buttom_changed"
            />

    </RelativeLayout>

</LinearLayout>