<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/dp_22">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_13"
        android:paddingRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        >

        <ImageView
            android:id="@+id/yueqiu_touxiang"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/touxiang" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_13">

            <TextView
                android:id="@+id/yueqiu_list_wtitle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘德华"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/size_17" />

            <TextView
                android:id="@+id/yueqiu_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="决战到天亮"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_black_333"
                android:textSize="@dimen/size_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/yueqiu_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¥240／人"
            android:textColor="@color/text_red"
            android:textSize="@dimen/size_16" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_8"
        style="@style/myLine"
        android:layout_marginLeft="@dimen/dp_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_13">

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_13"
            android:text="开始时间"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/size_13" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/line_bg_d9" />

        <TextView
            android:id="@+id/yueqiu_list_timestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="12月28日下午2点"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/size_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_13"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_13">

        <View
            android:layout_width="@dimen/dp_40"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_13"
            android:text="地点"
            android:textColor="@color/text_yellow"
            android:textSize="@dimen/size_13" />

        <View
            android:layout_width="@dimen/size_0.5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@color/line_bg_d9" />

        <TextView
            android:id="@+id/yueqiu_list_location"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="中南体育馆"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/size_13" />
    </LinearLayout>

    <View
        style="@style/myLine"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/dp_40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_8"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/create_image_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"/>


        <TextView
            android:id="@+id/yueqiu_list_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4/11人"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    正在报名"
            android:textColor="@color/text_orange"
            android:textSize="@dimen/dp_13" />


    </LinearLayout>

</LinearLayout>